@model StudentManager.Website.Models.CreateStudentViewModel
@{
    ViewData["Title"] = "Add new student";
}

<h1>Add a new Student</h1>

<form asp-action="create" method="post" role="form">

    <div class="form-group">
        <label for="StudentId">Student ID:</label>
        <input id="StudentId" asp-for="StudentId" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Name">Name:</label>
        <input id="Name" asp-for="Name" class="form-control"/>

    </div>
    <div class="form-group">
        <label for="Program">Program:</label>
        <select id="Program" asp-for="ProgramId" class="form-control">
            @foreach (var item in Model.ExistingPrograms)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <input type="submit" value="Submit" class="btn btn-outline-dark" />

</form>

<br />
<br />
<div class="form-group">
    <h4>Go back to all students</h4>
    <a class="btn btn-outline-dark" asp-controller="Student" asp-action="Index">List of Students</a>
</div>

